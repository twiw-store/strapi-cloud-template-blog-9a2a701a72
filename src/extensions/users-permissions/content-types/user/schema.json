{
  "kind": "collectionType",
  "collectionName": "up_users",
  "info": {
    "singularName": "user",
    "pluralName": "users",
    "displayName": "User",
    "description": "Extend Users-permissions User with profile fields"
  },
  "options": { "draftAndPublish": false },
  "attributes": {
    "name":    { "type": "string" },
    "surname": { "type": "string" },
    "phone":   { "type": "string", "minLength": 5, "regex": "^\\+?[0-9\\s\\-()]{7,}$", "required": true },
    "language": { "type": "enumeration", "enum": ["ru", "en", "fr", "es"], "default": "ru" },
    "country": { "type": "string" }
  }
}
